{% extends "../layout/document.twig" %}

{% block content %}

  {% if not heroData %}
    {% set heroData = [
      {
        header: 'Category name passed in from WordPress'
      }
  ]%}
  {% endif %}

  {% if not stepNavigation %}
    {% set stepNavigation = [
      {
        previousStep: '/pick-a-kit',
        nextStep: '/shipping-schedule'
      }
    ] %}
  {% endif %}

  {% include 'common/step-navigation.twig' %}
  {% include 'common/hero/hero-title-copy.twig', with { heroData: heroData } %}

  <div class="bg-grey">
    <div class="max-width-xl shop-landing-featured">
      <div class="columns">
        {% for product in products %}
          <div class="column col-xs-12 col-sm-6 col-md-4 col-lg-4 col-3 product-tile-column">
            {% include 'common/product/product-tile.twig' %}
          </div>
        {% endfor %}
      </div>

    </div>
  </div>
  <div class="bg-grey">
    {% include 'common/back-to-top.twig' %}
  </div>

{% endblock %}