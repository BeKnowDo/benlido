<div class="benlido-compact-product-compact-item swiper-slide">

  {% if items is defined %}

    {% set selected_variation_id = 0 %}

    {# Check if items are disabled and set variable value #}
    {% if items.disabled == true %}
      {% set className = "disabled" %}
    {% else %}
      {% set className = "" %}
    {% endif %}

    {# Check if Bag URL is defined #}
    {% if items.bagURL is defined %}
      {% set bagURL = items.bagURL %}
    {% else %}
      {% set bagURL = "" %}
    {% endif %}

    {# Check if items are picked #}
    {% if items.picked == true %}
      {% set picked = "hero-product-picked" %}
      {% set pickedCopy = items.selected_copy %}
    {% else %}
      {% set picked = "" %}
      {% set pickedCopy = items.button_copy %}
    {% endif %}

    {# Check if items are disabled #}
    {% if items.disabled == true %}
      <div class="hero-product-disabled">
        <h1 class="hero-product-disabled-header">{{ items.coming_soon }}</h1>
      </div>
    {% endif %}

    <div class="columns">

      <div class="column col-xs-12 col-sm-7 col-md-6 col-5 col-mx-auto">
        {# Check if a URL has been provided #}
        {% if items.href %}
          <h1 class="hero-product-header">
            {% if items.is_kit == false %}
              <a href="{{items.bagURL}}" title="{{items.header}}">
              {% endif %}
              {{items.header}}
              {% if items.is_kit == false %}
              </a>
            {% endif %}
          </h1>
        {% endif %}

        {# #}
        {% if items.copy %}
          <div class="hero-product-copy">{{items.copy}}</div>
        {% endif %}

        <div class="columns">
          <div class="column col-12">
            {# Display price #}
            {% if items.price %}
              <p class="hero-product-price">
                <span>
                  {{items.price}}
                </span>
                {% if items.pre_header %}
                  <span class="promo-text">{{items.pre_header}}</span>
                {% endif %}
              </p>
            {% endif %}
          </div>
        </div>

        <div class="columns">
          <div class="column col-12 centered">
            <a class="btn btn-primary btn-lg bl-add-bag-product {{items.css}} {{picked}}" id="button-{{items.index}}" href="{{items.href}}" {{disabled}} data-category_id="{{items.category_id}}" data-product_id="{{items.product_id}}" data-variation_id="{{selected_variation_id}}" data-product_name="" data-product_sku="" data-product_category_name="" data-price="" title="{{pickedCopy}}">
              {{pickedCopy}}
            </a>
          </div>
        </div>

        <div class="columns">
          <div class="column col-12 centered">
            <a class="btn btn-primary btn-lg bl-remove-bag-product {{items.removecss}}" id="button-{{items.index}}" href="{{items.href}}" {{disabled}} data-category_id="{{items.category_id}}" data-product_id="{{items.product_id}}" data-variation_id="{{selected_variation_id}}" title="Remove Bag">
              Remove Bag
            </a>
          </div>
        </div>

      </div>

      <div class="column col-xs-12 col-sm-5 col-md-6 col-7">
        <div class="hero-product-bag-image-container">
          <img id="hero-{{items.index}}" class="hero-product-bag-image" src="{{items.image}}" srcset="{{items.srcset}}"/>
        </div>
      </div>

    </div>

    {# Check if logo exists #}
    {% if items.logo %}
      <a href="{{items.bagURL}}" title="{{items.header}}">
        <img class="hero-product-logo" src="{{ items.logo }}" alt=""/>
      </a>
    {% endif %}

  {% endif %}

</div>