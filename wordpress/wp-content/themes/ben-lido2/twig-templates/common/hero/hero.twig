<div class="columns">

  {% for hero in homePageHeroes %}

    {% if hero.header is not empty %}

      {% if hero.singleColumn == true %}
        <div class="column col-xs-12 col-sm-12 col-lg-10 col-8 col-mx-auto">
        {% else %}
          <div class="column col-6 col-xs-12 col-sm-12">
          {% endif %}
          <div class="hero">
            <h1 class="hero-header">{{hero.header}}</h1>
            <p class="hero-copy">{{hero.copy}}</p>
            <div class="hero-image-container">
              <img class="hero-image" src="{{hero.image}}" alt="{{hero.header}}"/>
            </div>
          </div>
        </div>
      {% endif %}

    {% endfor %}
  </div>