{% if stepNavigation is defined %}
  <div class="step-navigation max-width-xl">

    <div class="container">
      <div class="columns">
        <div class="column col-4 text-left">
          <a class="btn btn-lg btn-no-border" href="{{stepNavigation.previousStep}}" title="">
            <i class="fal fa-chevron-circle-left"></i>
          </a>
        </div>
        <div class="column col-4 text-center">
          <div class="step-navigation-current">
            {{stepNavigation.current}}
          </div>
        </div>
        <div class="column col-4 text-right">

          <a class="btn btn-primary btn-lg hide-md {{stepNavigation.nextCss}}" href="{{stepNavigation.nextStep}}" title="">
            <span class="step-navigation-text-next">
              {{stepNavigation.next}}
            </span>
            <i class="fal fa-chevron-circle-right"></i>
          </a>

          <a class="btn btn-lg btn-no-border text-right show-md {{stepNavigation.nextCss}}" href="{{stepNavigation.nextStep}}" title="">
            <span class="step-navigation-text-next">
              Next
            </span>
            <i class="fal fa-chevron-circle-right"></i>
          </a>
        </div>
      </div>
    </div>

  </div>
{% endif %}